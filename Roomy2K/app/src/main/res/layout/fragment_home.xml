<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Bills Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/home_card_bills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:id="@+id/home_title_bills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/title_bills"
                    android:textAllCaps="true"
                    android:textColor="@color/text_secondary_grey"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/home_add_bills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_marginEnd="16dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    app:icon="@drawable/ic_baseline_add_24"
                    app:iconTint="@color/colorAccent"
                    style="?attr/borderlessButtonStyle"
                    app:layout_constraintTop_toTopOf="@id/home_title_bills"
                    app:layout_constraintBottom_toBottomOf="@id/home_title_bills"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/home_subtitle_divider_bills"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/section_divider"
                        />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_grid_bills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fillViewport="true"
                    android:scrollbars="vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="24dp"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>


        <!-- Chores Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/home_card_weekly_chore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/home_card_bills"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextView
                        android:id="@+id/home_title_weekly_chore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/title_weekly_chore"
                        android:textAllCaps="true"
                        android:textColor="@color/text_secondary_grey"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <!--
                    <ImageView
                        android:id="@+id/home_add_shared"
                        android:src="@drawable/ic_baseline_add_24"
                        android:tint="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toTopOf="@id/home_title_shared"
                        app:layout_constraintBottom_toBottomOf="@id/home_title_shared"
                        app:layout_constraintEnd_toEndOf="parent"/>
                        -->

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/home_title_weekly_chore_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ALL"
                        android:textColor="@color/colorAccent"
                        android:layout_marginEnd="16dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        style="?attr/borderlessButtonStyle"
                        app:layout_constraintTop_toTopOf="@id/home_title_weekly_chore"
                        app:layout_constraintBottom_toBottomOf="@id/home_title_weekly_chore"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/home_subtitle_divider_weekly_chore"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/section_divider"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/home_weekly_chore_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/home_weekly_chore_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Clean Kitcken"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/home_weekly_chore_mark_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mark Completed"
                        android:textColor="@color/colorAccent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="16dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeColor="@color/colorAccent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>


        <!-- Shared Items Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/home_card_shared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/home_card_weekly_chore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextView
                        android:id="@+id/home_title_shared"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/title_shared_items"
                        android:textAllCaps="true"
                        android:textColor="@color/text_secondary_grey"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/home_add_shared"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_marginEnd="16dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        app:icon="@drawable/ic_baseline_add_24"
                        app:iconTint="@color/colorAccent"
                        style="?attr/borderlessButtonStyle"
                        app:layout_constraintTop_toTopOf="@id/home_title_shared"
                        app:layout_constraintBottom_toBottomOf="@id/home_title_shared"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/home_subtitle_divider_shared"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/section_divider"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_list_shared"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fillViewport="true"
                    android:scrollbars="vertical"
                    android:layout_marginBottom="24dp"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>