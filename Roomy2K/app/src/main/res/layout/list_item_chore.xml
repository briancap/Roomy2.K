<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/li_chore_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_menu_camera"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/li_chore_name"
        android:text="Default Chore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/text_main_black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/li_chore_image"
        app:layout_constraintBottom_toBottomOf="@id/li_chore_image"
        app:layout_constraintStart_toEndOf="@id/li_chore_image"
        />

    <TextView
        android:id="@+id/li_chore_description"
        android:text="Default description for this given chore, also clean up your stuff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/li_chore_name"
        app:layout_constraintStart_toStartOf="@id/li_chore_name"
        app:layout_constraintEnd_toStartOf="@id/li_chore_frequency"
        />


    <TextView
        android:id="@+id/li_chore_frequency"
        android:text="WEEKLY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBaseline_toBaselineOf="@id/li_chore_name"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>